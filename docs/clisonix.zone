$ORIGIN clisonix.com.
$TTL 3600

; --- Start of Authority (SOA) ---
@   IN  SOA  ns1.cloudflare.com. admin.clisonix.com. (
        2025101701 ; Serial: YYYYMMDDnn
        3600       ; Refresh (1 hour)
        900        ; Retry (15 minutes)
        604800     ; Expire (1 week)
        86400 )    ; Minimum TTL (1 day)

; --- Name Servers (Cloudflare) ---
@       IN  NS  jean.ns.cloudflare.com.
@       IN  NS  justin.ns.cloudflare.com.

; --- IPv4 Records ---
@           IN  A   76.76.21.21
www         IN  A   76.76.21.21
api         IN  A   76.76.21.21
mesh        IN  A   76.76.21.21
agi         IN  A   76.76.21.21
monitor     IN  A   76.76.21.21
mail        IN  A   76.76.21.21
cloud       IN  A   76.76.21.21
data        IN  A   76.76.21.21
dashboard   IN  A   76.76.21.21

; --- Mail Exchange ---
@       IN  MX 10 mail.clisonix.com.

; --- TXT & Security ---
@           IN  TXT "v=spf1 include:_spf.google.com ~all"
_dmarc      IN  TXT "v=DMARC1; p=none; rua=mailto:postmaster@clisonix.com"
selector1._domainkey IN TXT "v=DKIM1; k=rsa; p=MIGfMA0GCSqGSIb3DQEBAQUAA4GNADCBiQKBgQCt7"

; --- CAA (SSL Certificate Authority Authorization) ---
@       IN  CAA 0 issue "letsencrypt.org"
@       IN  CAA 0 issuewild "letsencrypt.org"
@       IN  CAA 0 iodef "mailto:admin@clisonix.com"

; --- Optional Subdomains (Future Services) ---
status      IN  A 76.76.21.21
system      IN  A 76.76.21.21
neuro       IN  A 76.76.21.21
